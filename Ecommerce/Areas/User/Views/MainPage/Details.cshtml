@using Models;
@using Models.DTO;
@model ProdutoDTO

@{

}


<table class="table table-dark d-flex flex-row">
    <tbody>
        
        <tr>
            <td>Id:</td>
            <td></td>
            <td>@Model.produto.Id</td>
        </tr>

        <tr>
            <td>Name:</td>
            <td></td>
            <td>@Model.produto.Name</td>
        </tr>

        <tr>
            <td>Price:</td>
            <td></td>
            <td>@Model.produto.Price</td>
        </tr>

        @if (string.IsNullOrEmpty(Model.produto.Descricao))
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>N/A</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>@Model.produto.Descricao</td>
            </tr>
        }
        
        @if (Model.produto.CategoriaId is not null && Model.category is not null)
        {
            <tr>
                <td>Categoria:</td>
                <td></td>
                <td>@Model.category.Name</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Categoria:</td>
                <td></td>
                <td>N/A</td>
            </tr>
        }
        
       

       

    </tbody>

</table>
