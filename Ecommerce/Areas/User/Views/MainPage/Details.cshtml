@using Models;
@using ModelsDTO.DTO.MainPageControllerDTO;
@using Models.Enums;
@model DetailsDTO


@*
*@

<table class="table table-dark d-flex flex-row">
    <tbody>
        @if (Model.conta.Role == Roles.Administrator)
        {
            <tr>
                <td>Id:</td>
                <td></td>
                <td>@Model.produto.Id</td>
            </tr>
        }

        <tr>
            <td>Name:</td>
            <td></td>
            <td>@Model.produto.Name</td>
        </tr>

        <tr>
            <td>Price:</td>
            <td></td>
            <td>@Model.produto.Price</td>
        </tr>

        <tr>
            <td>Categoria:</td>
            <td></td>
            <td>@Model.categoria</td>
        </tr>

        @if (string.IsNullOrEmpty(Model.produto.Descricao))
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>N/A</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>@Model.produto.Descricao</td>
            </tr>
        }
        
        @if(Model.conta.Role == Roles.Administrator)
        {
            <tr>
                <td>Options:</td>
                <td></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.produto.Id"><i class="bi bi-pencil text-white"></i></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a asp-action="Delete" asp-route-id="@Model.produto.Id"><i class="bi bi-trash text-danger"></i></a>
                </td>
            </tr>
        }

        
        
       

       

    </tbody>

</table>
