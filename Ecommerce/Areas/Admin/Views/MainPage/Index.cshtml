@using Models;
@model List<Produto>

<button class="btn btn-primary "><a class="text-white" asp-action="Insert">Adicionar um produto</a> </button>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col">Options</th>
            <th scope="col"></th>
            
            

        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td>
                        <button class="btn btn-primary"> <a class="text-white" href="Admin/MainPage/Details/@prod.Id"> Detalhes </a> </button>
                </td>

                <td>
                    <button class="btn btn-primary"><a class="text-white" href="Admin/MainPage/Edit/@prod.Id"> Editar </a> </button>
                </td>
                
                <td>
                        <button class="btn btn-danger"><a class="text-white" href="Admin/MainPage/Delete/@prod.Id"> Deletar </a> </button>    
                </td>
                
            </tr>




        }
        
        
        
    </tbody>
</table>