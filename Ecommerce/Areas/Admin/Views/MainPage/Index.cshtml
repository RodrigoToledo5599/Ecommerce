@using Models;
@model List<Produto>

<button class="btn btn-primary "><a class="text-white" asp-action="Insert">Adicionar um produto</a> </button>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td><a href="Admin/MainPage/Details/@prod.Id">Detalhes</a></td>
                <td><a href="Admin/MainPage/Edit/@prod.Id">Editar</a></td>
                <td><a href="Admin/MainPage/Delete/@prod.Id">Deletar</a></td>
            </tr>




        }
        
        
        
    </tbody>
</table>