@using Models;
@model Produto

@{

}
<head>

</head>


<body class="align-content-center">

    <div class="container">

        <table class="table table-dark d-flex flex-row">
            <tbody>
        
                <tr>
                    <td>Id:</td>
                    <td></td>
                    <td>@Model.Id</td>
                </tr>

                <tr>
                    <td>Name:</td>
                    <td></td>
                    <td>@Model.Name</td>
                </tr>

                <tr>
                    <td>Price:</td>
                    <td></td>
                    <td>@Model.Price</td>
                </tr>

                @if (string.IsNullOrEmpty(Model.Descricao))
                {
                    <tr>
                        <td>Descrição:</td>
                        <td></td>
                        <td>N/A</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>Descrição:</td>
                        <td></td>
                        <td>@Model.Descricao</td>
                    </tr>
                }
        
                <tr>
                    <td>Categoria:</td>
                    <td></td>
                    <td>@ViewData["categoria"]</td>
                </tr>

               <tr>
                    <td>Options:</td>
                    <td></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil text-white"></i></a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash text-danger"></i></a>
                    </td>
            
            
               </tr>

       

            </tbody>

        </table>
        <br>
        <br>
    </div>

