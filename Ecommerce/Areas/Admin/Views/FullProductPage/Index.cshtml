@using Models;
@model Produto

@{
    bool clickDelete = false;
    object clickDeleteEvent()
    {
        return clickDelete = true;
    }

}


<table class="table table-dark d-flex flex-row">
    <tbody>
        
        <tr>
            <td>Id:</td>
            <td></td>
            <td>@Model.Id</td>
        </tr>

        <tr>
            <td>Name:</td>
            <td></td>
            <td>@Model.Name</td>
        </tr>

        <tr>
            <td>Price:</td>
            <td></td>
            <td>@Model.Price</td>
        </tr>

        @if (string.IsNullOrEmpty(Model.Descricao))
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>N/A</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Descrição:</td>
                <td></td>
                <td>@Model.Descricao</td>
            </tr>
        }
        

        @if (Model.CategoriaId == null)
        {
            <tr>
                <td>Categoria:</td>
                <td></td>
                <td>N/A</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Categoria:</td>
                <td></td>
                <td>@ViewData["Categoria"]</td>
            </tr>
        }
       

       

    </tbody>

</table>
<br>
<br>

<button class="btn btn-primary "><a class="text-white" href="/Admin/FullProductPage/Edit/@Model.Id">Editar</a> </button>
<button onclick="@clickDeleteEvent()" class="btn btn-primary text-white ">Deletar </button>

